<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <%= form_with(model: @user, class: "shadow p-5 mb-5 bg-white rounded", local: true) do |form| %>
                
                <div class="form-group row">
                    <%= form.label :username, "Username:", class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= form.text_field :username, class: "form-control shadow rounded", autofocus: true %>
                    </div>
                </div>
            
                <div class="form-group row">
                    <%= form.label :email, "Email:", class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= form.email_field :email, class: "form-control shadow rounded" %>
                    </div>
                </div>
                
                <div class="form-group row">
                    <%= form.label :password, "Password:", class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= form.password_field :password, class: "form-control shadow rounded" %>
                    </div>
                </div>
                
                <div class="form-group row justify-content-center">
                    <%= form.submit(@user.new_record? ? 'Sign up!' : 'Update', class: "btn btn-outline-primary") %>
                    &nbsp;&nbsp;&nbsp;
                    <%= link_to "Cancel", @user.new_record? ? root_path : user_path(@user), class: "btn btn-outline-danger" %>
                </div>
                
            <% end %>
        </div>
    </div>
</div>