<h1 class="text-center mt-4">Category: <%= @category.name %></h1>
<div class="container">
    <table class="table table-hover bg-white">
        <caption>List of articles</caption>
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
        <% @category_articles.each do |article| %>
            <tr>
                <th scope="row"><%=article.id%></th>
                <td><%=article.title%></td>
                <td><%= link_to 'View', article_path(article), class: "btn btn-primary btn-sm" %></td>
            </tr>
        <% end %>
         </tbody>
    </table>
    
    <% if @category_articles.count == 0 %>
      <div class="font-italic text-center">No articles found</div>
    <% end %>

    <div class="text-center">
        <%= will_paginate @category_articles, class: "apple_pagination" %>
    </div>
</div>