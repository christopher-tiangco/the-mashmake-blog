<div class="container">
    
    <div class="row justify-content-center">
        <div class="col-12">
            <%= form_with(model: @category, class: "shadow p-5 mb-5 bg-white rounded", local: true) do |form| %>
                
                <div class="form-group row">
                    <%= form.label :name, "Category Name:", class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Enter name", autofocus: true %>
                    </div>
                </div>
                
                <div class="form-group row justify-content-center">
                    <%= form.submit class: "btn btn-outline-primary"%>
                    &nbsp;&nbsp;&nbsp;
                    <%= link_to "Cancel", categories_path, class: "btn btn-outline-danger" %>
                </div>
                
            <% end %>
        </div>
    </div>
</div>