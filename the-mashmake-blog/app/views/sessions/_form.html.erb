<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <%= form_with(scope: :session, url: login_path, class: "shadow p-5 mb-5 bg-white rounded", local: true) do |form| %>
                
                <div class="form-group row">
                    <%= form.label :email, "Email:", class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= form.email_field :email, class: "form-control shadow rounded", autofocus: true %>
                    </div>
                </div>
                
                <div class="form-group row">
                    <%= form.label :password, "Password:", class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= form.password_field :password, class: "form-control shadow rounded" %>
                    </div>
                </div>
                
                <div class="form-group row justify-content-center">
                    <%= form.submit 'Login', class: "btn btn-outline-primary" %>
                </div>
                
            <% end %>
        </div>
    </div>
</div>