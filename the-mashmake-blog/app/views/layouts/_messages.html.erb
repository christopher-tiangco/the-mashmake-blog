<% if flash[:notice]%>
  
  <%
    divClass = ''
    isSuccess = false
    isError = false
    
    if flash[:notice]['successMessage']
      isSuccess = true
      divClass = "alert alert-success alert-dismissible fade show"
    elsif flash[:notice]['errorMessages']
      isError = true
      divClass = "alert alert-danger alert-dismissible fade show"
    end
  %>
  
  <div class="<%= divClass %>" role="alert">
    <% if isSuccess %>
      <%= flash[:notice]['successMessage'] %>
    <% elsif isError %>
      <ul>
      <% flash[:notice]['errorMessages'].each do |msg| %>
          <li><%= msg %></li>
      <% end %>
      </ul>
    <% end %>
    
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  
<% end %>